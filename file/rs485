config attr 'rs485'
	option device '/dev/ttyS0'
	option speed '9600'
	option mode '8e1'
	option timeout '500'
	option type 'hex'

config socket 'socket'
	option address '192.168.8.1'
	option port '502'
	option mode 'tcps'
	option timeout '60'
	option status '0'
	
config mqtt 'mqtt'
	option address 'broker.emqx.io'
	option port '1883'
	option clientid 'glinetx300b'
	option timeout '3000'
	option interval '60'
	option status '0'
	option username ''
	option password ''
	option qos 	'0'
	option ssl      '0'
	option capath      '/etc/rs485/'
	option subscribe      '/glinet/rs485/cmd'
	option publish        '/glinet/rs485/data'
	option autoconn 	'0'
	option autoconninteval 	'0'
	option autoconnmaxtime 	'0'


